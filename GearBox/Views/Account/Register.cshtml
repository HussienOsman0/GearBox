@model BLL.View_models.ClientRegisterVM

@{
    ViewData["Title"] = "Client Register";
}

<style>
    .register-container {
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 0;
    }

    .register-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

    .register-header {
        background: linear-gradient(135deg, #212529 0%, #343a40 100%);
        color: white;
        padding: 30px 20px;
        text-align: center;
        border-bottom: 4px solid #ffc107; /* خط أصفر مميز */
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #ffc107;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
        color: #6c757d;
    }

    .form-control {
        border-left: none;
        background-color: #f8f9fa;
    }

        .form-control:focus {
            background-color: #fff;
        }

    .btn-register {
        background-color: #ffc107;
        color: #212529;
        font-weight: 700;
        border: none;
        transition: all 0.3s;
    }

        .btn-register:hover {
            background-color: #e0a800;
            transform: translateY(-2px);
        }
</style>

<div class="container register-container">
    <div class="col-md-7 col-lg-5">
        <div class="card register-card shadow-lg">

            <div class="register-header">
                <div class="mb-2">
                    <span class="fa-stack fa-2x">
                        <i class="fas fa-circle fa-stack-2x text-white-50"></i>
                        <i class="fas fa-user-plus fa-stack-1x text-dark"></i>
                    </span>
                </div>
                <h3 class="fw-bold mb-1">Join GearBox</h3>
                <p class="small text-white-50 mb-0">Create your client account today</p>
            </div>

            <div class="card-body p-4 p-md-5">
                <form asp-action="Register" method="post">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small mb-4 rounded-3"></div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label small fw-bold text-muted ms-1">Full Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="FullName" class="form-control" placeholder="e.g. John Doe" />
                        </div>
                        <span asp-validation-for="FullName" class="text-danger small ms-1"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label small fw-bold text-muted ms-1">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small ms-1"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label small fw-bold text-muted ms-1">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small ms-1"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="ConfirmPassword" class="form-label small fw-bold text-muted ms-1">Confirm</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-check-circle"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small ms-1"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-2">
                        <button type="submit" class="btn btn-register btn-lg py-2 shadow-sm">
                            Create Account <i class="fas fa-arrow-right ms-2 small"></i>
                        </button>
                    </div>
                </form>
            </div>

            <div class="card-footer text-center bg-light py-3 border-0">
                <small class="text-muted">Already have an account?</small>
                <a asp-action="Login" class="fw-bold text-dark text-decoration-none ms-1 border-bottom border-dark">Login here</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}