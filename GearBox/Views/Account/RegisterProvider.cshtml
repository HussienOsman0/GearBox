@using DAL.Enums
@model BLL.View_models.ProviderRegisterVM

@{
    ViewData["Title"] = "Join as Service Provider";
}

<style>
    .provider-container {
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 0;
    }

    .provider-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

    .provider-header {
        background: linear-gradient(135deg, #1c1c1c 0%, #2c3e50 100%);
        color: white;
        padding: 35px 20px;
        text-align: center;
        border-bottom: 4px solid #ffc107;
    }

    .form-control:focus, .form-select:focus {
        box-shadow: none;
        border-color: #ffc107;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
        color: #6c757d;
    }

    .form-control, .form-select {
        border-left: none;
        background-color: #f8f9fa;
    }

        .form-control:focus, .form-select:focus {
            background-color: #fff;
        }

    .btn-provider {
        background: #ffc107;
        color: #000;
        font-weight: 700;
        border: none;
        transition: all 0.3s;
    }

        .btn-provider:hover {
            background: #e0a800;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
        }
</style>

<div class="container provider-container">
    <div class="col-md-7 col-lg-6">
        <div class="card provider-card shadow-lg">

            <div class="provider-header">
                <div class="mb-3">
                    <div class="d-inline-block p-3 rounded-circle bg-warning text-dark shadow-sm">
                        <i class="fas fa-tools fa-2x"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-1">Become a Partner</h3>
                <p class="small text-white-50 mb-0">Join our network of professional mechanics & services</p>
            </div>

            <div class="card-body p-4 p-md-5">
                <form asp-action="RegisterProvider" method="post">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small mb-4 rounded-3"></div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label small fw-bold text-muted ms-1">Business or Full Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-building"></i></span>
                            <input asp-for="FullName" class="form-control" placeholder="e.g. Speed Auto Fix" />
                        </div>
                        <span asp-validation-for="FullName" class="text-danger small ms-1"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label small fw-bold text-muted ms-1">Business Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="contact@business.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small ms-1"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProviderType" class="form-label small fw-bold text-muted ms-1">Service Category</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-tag"></i></span>
                            <select asp-for="ProviderType"
                                    class="form-select"
                                    asp-items="Html.GetEnumSelectList<ProviderType>()">
                                <option value="">-- Select Your Specialty --</option>
                            </select>
                        </div>
                        <span asp-validation-for="ProviderType" class="text-danger small ms-1"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label small fw-bold text-muted ms-1">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small ms-1"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="ConfirmPassword" class="form-label small fw-bold text-muted ms-1">Confirm</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-check-circle"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small ms-1"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-2">
                        <button type="submit" class="btn btn-provider btn-lg py-2 shadow-sm">
                            <i class="fas fa-handshake me-2"></i> Register Business
                        </button>
                    </div>
                </form>
            </div>

            <div class="card-footer text-center bg-light py-3 border-0">
                <small class="text-muted">Not a service provider?</small>
                <a asp-action="Register" class="fw-bold text-dark text-decoration-none ms-1 border-bottom border-dark">Register as Client instead</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}