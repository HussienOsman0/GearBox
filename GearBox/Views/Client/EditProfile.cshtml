@using DAL.Enums
@model BLL.View_models.ClientProfileVM

@{
    ViewData["Title"] = "My Profile";
}

<style>
    .profile-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 0;
    }

    .profile-card {
        border: none;
        border-radius: 15px;
        overflow: visible; /* للسماح بظهور الصورة الدائرية */
        position: relative;
        margin-top: 30px;
    }

    .profile-header {
        background: linear-gradient(135deg, #0d6efd 0%, #0043a8 100%); /* ثيم أزرق للعميل */
        height: 130px;
        width: 100%;
        border-radius: 15px 15px 0 0;
        position: relative;
    }

    .avatar-circle {
        width: 110px;
        height: 110px;
        background-color: #fff;
        color: #0d6efd;
        border-radius: 50%;
        border: 4px solid #f8f9fa;
        position: absolute;
        bottom: -55px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        font-size: 3rem;
        z-index: 2;
    }

    .card-body-custom {
        padding-top: 70px; /* مسافة لتعويض الصورة */
        padding-bottom: 30px;
        padding-left: 30px;
        padding-right: 30px;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #0d6efd;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
        color: #6c757d;
    }

    .form-control {
        border-left: none;
        background-color: #fff;
    }

    .btn-update {
        background-color: #0d6efd;
        color: white;
        font-weight: 600;
        border: none;
        transition: all 0.3s;
    }

        .btn-update:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
        }
</style>

<div class="container profile-container">
    <div class="col-md-7 col-lg-5">
        <div class="card profile-card shadow-lg">

            <div class="profile-header">
                <div class="avatar-circle">
                    <i class="fas fa-user"></i>
                </div>
            </div>

            <div class="card-body card-body-custom">
                <div class="text-center mb-4">
                    <h4 class="fw-bold mb-1">Personal Information</h4>
                    <p class="text-muted small">Manage your account details</p>
                </div>

                <form asp-action="EditProfile" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label small fw-bold text-muted ms-1">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-lock text-muted"></i></span>
                            <input asp-for="Email" class="form-control bg-light text-muted" readonly />
                        </div>
                        <small class="text-muted fst-italic ms-1" style="font-size: 0.75rem;">Email cannot be changed.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label small fw-bold text-muted ms-1">Full Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user-edit"></i></span>
                            <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                        </div>
                        <span asp-validation-for="FullName" class="text-danger small ms-1"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="PhoneNumber" class="form-label small fw-bold text-muted ms-1">Phone Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-mobile-alt"></i></span>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+20 1xx xxx xxxx" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger small ms-1"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-update btn-lg py-2 shadow-sm">
                            <i class="fas fa-save me-2"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-light text-muted border-0">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}