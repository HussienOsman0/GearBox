@model IEnumerable<DAL.Models.Booking>
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .home-container {
        min-height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .choice-card {
        border: none;
        border-radius: 20px;
        transition: all 0.4s ease;
        cursor: pointer;
        background: #fff;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

        .choice-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15) !important;
        }

    /* Client Card Style */
    .card-client .icon-box {
        background-color: #e7f1ff;
        color: #0d6efd;
    }

    .card-client:hover {
        border-bottom: 5px solid #0d6efd;
    }

    .btn-client {
        background-color: #0d6efd;
        color: white;
        border: none;
    }

        .btn-client:hover {
            background-color: #0b5ed7;
        }

    /* Provider Card Style */
    .card-provider .icon-box {
        background-color: #fff3cd;
        color: #ffc107;
    }

    .card-provider:hover {
        border-bottom: 5px solid #ffc107;
    }

    .btn-provider {
        background-color: #ffc107;
        color: #212529;
        border: none;
    }

        .btn-provider:hover {
            background-color: #e0a800;
        }

    .icon-box {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        margin: 0 auto 20px;
        transition: transform 0.3s;
    }

    .choice-card:hover .icon-box {
        transform: scale(1.1) rotate(5deg);
    }
</style>

<div class="container home-container">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welcome to GearBox</h1>
        <p class="lead text-muted">Please select your role to continue</p>
    </div>

    <div class="row justify-content-center w-100">

        <div class="col-md-5 col-lg-4 mb-4">
            <div class="card choice-card card-client shadow-lg p-4 text-center">
                <div class="card-body d-flex flex-column">
                    <div class="icon-box">
                        <i class="fas fa-car"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Car Owner</h3>
                    <p class="text-muted mb-4 flex-grow-1">
                        Looking for repair, towing, or maintenance services?
                    </p>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Client"))
                    {
                        <a asp-controller="Client" asp-action="Index" class="btn btn-client btn-lg rounded-pill fw-bold w-100 py-3">
                            Go to Dashboard <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-client btn-lg rounded-pill fw-bold w-100 py-3">
                            Continue as Client <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-5 col-lg-4 mb-4">
            <div class="card choice-card card-provider shadow-lg p-4 text-center">
                <div class="card-body d-flex flex-column">
                    <div class="icon-box">
                        <i class="fas fa-tools"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Service Provider</h3>
                    <p class="text-muted mb-4 flex-grow-1">
                        Mechanic or Towing service? Manage your business here.
                    </p>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Provider"))
                    {
                        <a asp-controller="Provider" asp-action="ManageBookings" class="btn btn-provider btn-lg rounded-pill fw-bold w-100 py-3">
                            Go to Dashboard <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="RegisterProvider" class="btn btn-provider btn-lg rounded-pill fw-bold w-100 py-3">
                            Continue as Partner <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    }
                </div>
            </div>
        </div>

    </div>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="mt-4">
            <p class="text-muted">
                Already have an account?
                <a asp-controller="Account" asp-action="Login" class="fw-bold text-dark text-decoration-none border-bottom border-dark">Login Here</a>
            </p>
        </div>
    }
</div>