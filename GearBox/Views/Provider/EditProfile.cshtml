@using DAL.Enums
@model BLL.View_models.ProviderProfileVM

@{
    ViewData["Title"] = "Edit Provider Profile";
}

<style>
    .profile-container {
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 0;
    }

    .profile-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        position: relative;
    }

    .profile-header {
        background: linear-gradient(135deg, #212529 0%, #495057 100%);
        height: 140px;
        width: 100%;
        position: relative;
    }

    .avatar-circle {
        width: 100px;
        height: 100px;
        background-color: #ffc107; /* أصفر مميز */
        color: #212529;
        border-radius: 50%;
        border: 4px solid #fff;
        position: absolute;
        bottom: -50px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        font-size: 2.5rem;
    }

    .card-body-custom {
        padding-top: 60px; /* مسافة عشان الـ Avatar */
        padding-bottom: 30px;
        padding-left: 30px;
        padding-right: 30px;
    }

    .form-control:focus, .form-select:focus {
        box-shadow: none;
        border-color: #ffc107;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
        color: #6c757d;
    }

    .form-control, .form-select {
        border-left: none;
        background-color: #fff;
    }

        .form-control[readonly] {
            background-color: #e9ecef;
            color: #6c757d;
        }

    .btn-save {
        background-color: #ffc107;
        color: #212529;
        font-weight: 700;
        border: none;
        transition: all 0.3s;
    }

        .btn-save:hover {
            background-color: #e0a800;
            transform: translateY(-2px);
        }
</style>

<div class="container profile-container">
    <div class="col-md-7 col-lg-6">
        <div class="card profile-card shadow-lg">

            <div class="profile-header">
                <div class="avatar-circle">
                    <i class="fas fa-user-tie"></i>
                </div>
            </div>

            <div class="card-body card-body-custom">
                <div class="text-center mb-4">
                    <h4 class="fw-bold">Business Profile</h4>
                    <p class="text-muted small">Update your contact and service information</p>
                </div>

                <form asp-action="EditProfile" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label small fw-bold text-muted ms-1">Account Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-lock text-muted"></i></span>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>
                        <small class="text-muted" style="font-size: 0.75rem;">Email cannot be changed.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label small fw-bold text-muted ms-1">Business Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-building"></i></span>
                            <input asp-for="FullName" class="form-control" placeholder="e.g. Quick Fix Auto" />
                        </div>
                        <span asp-validation-for="FullName" class="text-danger small ms-1"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label small fw-bold text-muted ms-1">Phone Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-phone-alt"></i></span>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+20 123 456 7890" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger small ms-1"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Type" class="form-label small fw-bold text-muted ms-1">Primary Service</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-tools"></i></span>
                            <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<ProviderType>()">
                            </select>
                        </div>
                        <span asp-validation-for="Type" class="text-danger small ms-1"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-save btn-lg py-2 shadow-sm">
                            <i class="fas fa-save me-2"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-light text-muted border-0">
                            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}