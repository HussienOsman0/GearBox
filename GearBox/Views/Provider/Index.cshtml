@model IEnumerable<DAL.Models.Booking>

@{
    ViewData["Title"] = "Provider Dashboard";
}

<div class="container-fluid">
    <h2 class="mb-4">Dashboard Overview</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">Recent Incoming Requests</h5>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-4 text-center text-muted">No bookings found yet.</div>
            }
            else
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Client</th>
                            <th>Vehicle</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Client?.FullName</td>
                                <td>@item.Vehicle?.make</td>
                                <td>@item.BookingDate.ToString("MMM dd, hh:mm tt")</td>
                                <td>@item.Status</td>
                                <td>
                                    <a asp-action="ManageBookings" class="btn btn-sm btn-outline-primary">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>